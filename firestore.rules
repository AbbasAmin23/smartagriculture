
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email.matches('.*admin.*');
    }

    // Admins collection
    match /admins/{adminId} {
      allow read, write: if isOwner(adminId);
    }

    // Farmers collection
    match /farmers/{farmerId} {
      allow read, write: if isOwner(farmerId);
    }

    // MarketData collection
    match /marketData/{marketDataId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // PriceHistory collection
    match /priceHistory/{priceHistoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // WeatherUpdates collection
    match /weatherUpdates/{weatherUpdateId} {
        allow read: if true;
        allow write: if false; // Only backend processes can write
    }

    // ForumPosts collection
    match /forumPosts/{postId} {
      allow list: if true;
      allow get: if true;
      allow create: if isSignedIn() && request.resource.data.farmerId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.farmerId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.farmerId == request.auth.uid;
    }

    // ForumComments collection
    match /forumComments/{commentId} {
        allow list: if true;
        allow get: if true;
        allow create: if isSignedIn() && request.resource.data.farmerId == request.auth.uid;
        allow update, delete: if isSignedIn() && resource.data.farmerId == request.auth.uid;
    }
  }
}

    